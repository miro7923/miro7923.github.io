        <span class="o">}</span>
			
        <span class="nc">System</span><span class="o">.</span><span class="na">out</span><span class="o">.</span><span class="na">println</span><span class="o">(</span><span class="s">"DAO : ê¸€ "</span><span class="o">+</span><span class="n">list</span><span class="o">.</span><span class="na">size</span><span class="o">()+</span><span class="s">"ê°œ ì €ì¥ ì™„ë£Œ"</span><span class="o">);</span>
    <span class="o">}</span>
