        <span class="kt">int</span> <span class="n">curPage</span> <span class="o">=</span> <span class="nc">Integer</span><span class="o">.</span><span class="na">parseInt</span><span class="o">(</span><span class="n">pageNum</span><span class="o">);</span>
        <span class="kt">int</span> <span class="n">startRow</span> <span class="o">=</span> <span class="o">(</span><span class="n">curPage</span> <span class="o">-</span> <span class="mi">1</span><span class="o">)</span> <span class="o">*</span> <span class="n">pageSize</span> <span class="o">+</span> <span class="mi">1</span><span class="o">;</span>
		
        <span class="c1">// DBì—ì„œ ê¸€ ëª©ë¡ ê°€ì ¸ì˜¤ê¸°</span>
        <span class="nc">ArrayList</span><span class="o">&lt;</span><span class="nc">BoardDTO</span><span class="o">&gt;</span> <span class="n">postList</span> <span class="o">=</span> <span class="kc">null</span><span class="o">;</span>
        <span class="k">if</span> <span class="o">(</span><span class="mi">0</span> <span class="o">!=</span> <span class="n">postCnt</span><span class="o">)</span>
        <span class="o">{</span>
            <span class="c1">// í•œ í˜ì´ì§€ì— í‘œì‹œí•  ë§Œí¼ë§Œ ê¸€ ëª©ë¡ì„ ê°€ì ¸ì˜¤ê¸°</span>
            <span class="n">postList</span> <span class="o">=</span> <span class="n">dao</span><span class="o">.</span><span class="na">getPostList</span><span class="o">(</span><span class="n">startRow</span><span class="o">,</span> <span class="n">pageSize</span><span class="o">);</span>
        <span class="o">}</span>
		
